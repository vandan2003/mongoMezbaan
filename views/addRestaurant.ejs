<html>

<head>
    <title>Restaurant</title>
</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<body>
    <div id="container">
        <div class="container mt-3">
            <h2>Register</h2>
            <form action="/restaurant/signUp" method="post" enctype="multipart/form-data">
                <div class="mb-3 mt-3">
                    <label for="email">Name :</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name">
                </div>
                <div class="mb-3 mt-3">
                    <label for="email">Mobile</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Mobile no" name="contact">
                </div>
                <div class="mb-3 mt-3">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
                </div>
                <div class="mb-3">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="password">
                </div>
                
                <div class="mb-3">
                    <label for="pwd">description</label>
                    <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="description">
                </div>
                <div class="mb-3">
                    <label for="pwd">Address</label>
                    <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="address">
                </div>

                <div class="mb-3">
                    <label for="pwd">OpenIng Time</label>
                    <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="openingTime">
                </div>

                <div class="mb-3">
                    <label for="pwd">Closing Time</label>
                    <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="closingTime">
                </div>

                <div class="mb-3">
                    <label for="pwd">totalTables</label>
                    <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="totalTables">
                </div>

                <div class="mb-3">
                    <label for="pwd">Rating</label>
                    <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="rating">
                </div>

                <div class="mb-3">
                    <label for="pwd">Fssai</label>
                    <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="fssai">
                </div>

                <div class="mb-3">
                    <label for="pwd">Type</label>
                    <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="type">
                </div>

                <div class="mb-3">
                    <label for="pwd">avgCostPer2</label>
                    <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="avgCostPer2">
                </div>

                <div class="mb-3">
                    <label for="pwd">Lattitude</label>
                    <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="lattitude">
                </div>

                <div class="mb-3">
                    <label for="pwd">Longitude</label>
                    <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="longitude">
                </div>

                <div class="mb-3 mt-3">
                    <label for="email">Images :</label>
                    <input type="file" class="form-control" id="images" name="images" multiple>
                </div>
                <div class="mb-3 mt-3">
                    <label for="email">Images :</label>
                    <input type="file" class="form-control" id="images" name="menus" multiple>
                </div>

                <div class="mb-3 mt-3">
                    <label for="email">Ac</label>
                    <input type="checkbox"  value="AC" id="images" name="facilities" >
                    <label for="email">Parking</label>
                    <input type="checkbox" value="Parking" id="images" name="facilities" >
                    <label for="email">Other</label>
                    <input type="checkbox" value="Other" id="images" name="facilities" >
                </div>

                <div class="mb-3 mt-3">
                    <label for="email">Chinese</label>
                    <input type="checkbox"  value="Chinese" id="images" name="cuisines" >
                    <label for="email">South Indian</label>
                    <input type="checkbox" value="South Indian" id="images" name="cuisines" >
                    <label for="email">Italian</label>
                    <input type="checkbox" value="Italian" id="images" name="cuisines" >
                </div>
                
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</body>

</html>